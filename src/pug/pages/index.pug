extends /elements/layout-index

block data
  -
    title = "Rx2Go â€” Performance Page"

    const deliveryPages = [
      { name: "On time delivery main", url: "delivery/main-page.html" },
    ]

    const callPages = [
      { name: "Call analytics main", url: "call/main-page.html" },
    ]

    const trackingPages = [
      { name: "Tracking link analytics Regular", url: "tracking/analytics-page.html" },
    ]

    const ticketsPages = [
      { name: "Tickets analytics main", url: "tickets/main-page.html" },
      { name: "Tickets analytics Complain", url: "tickets/complain-page.html" },
    ]

    const dispatcherPages = [
      { name: "Dispatcher analytics regular", url: "dispatcher/regular-page.html" },
      { name: "Dispatcher analytics income", url: "dispatcher/income-page.html" },
    ]

    const uiPages = [
      { name: "UI", url: "ui-page.html" },
    ]


block content
  mixin page-list({list})
    ul
      each it in list
        li
          a(href=it.url) #{it.name} ( #[span=it.url] )
  style.
    @import url('https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap');
    body {
      --color-main: #4682b4;
      --color-bg: #ffffff;
      --color-title: #162854;
      --color-text: #4d5156;
      padding: 20px 40px;
      font-family: "Lato", sans-serif;
      font-size: 16px;
      line-height: 22px;
      font-weight: 400;
      color: var(--color-text);
      background-color: var(--color-bg);
    }
    h1 {
      font-size: 22px;
      line-height: 29px;
      font-weight: 700;
      color: var(--color-title);
      text-transform: uppercase;
    }
    h2 {
      font-size: 20px;
      line-height: 26px;
      margin: 0;
      margin-top: 20px;
    }
    ul,
    ol {
      margin-top: 10px;
      margin-bottom: 0;
      padding-left: 20px;
    }
    li {
      margin-bottom: 10px;
    }
    a {
      color: inherit;
      text-decoration: none;
    }
    a:visited {
      color: var(--color-text);
    }
    a:hover,
    a:focus {
      color: var(--color-main);
    }
    a span { color: gray; }

  h1=title

  h2 UI
  +page-list({ list: uiPages })

  h2 On time delivery
  +page-list({ list: deliveryPages })

  h2 Call analytics
  +page-list({ list: callPages })

  h2 Tracking link analytics
  +page-list({ list: trackingPages })

  h2 Tickets Analytics
  +page-list({ list: ticketsPages })

  h2 Dispatcher Analytics
  +page-list({ list: dispatcherPages })
